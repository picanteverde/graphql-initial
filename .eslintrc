{
    "parser": "babel-eslint",
    "globals": {
      "__DEV__": true
    },
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "import",
        "babel"
    ],
    "settings": {
    },
    "rules": {
        "generator-star-spacing": 0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "new-cap": ["error", {"capIsNewExceptions": ["Map","List"]}],
        "no-param-reassign": 1,
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved": 0,
        "import/extensions": 0,
        "require-jsdoc": ["warn", {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true,
            "ArrowFunctionExpression": false
          }
        }],
        "valid-jsdoc": ["error", {
          "prefer": {
            "arg": "param",
            "argument": "param",
            "class": "constructor",
            "return": "returns",
            "virtual": "abstract",
          }
        }],
    }
}
